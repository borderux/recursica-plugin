{
  "name": "recursica-plugin",
  "private": false,
  "version": "0.0.1",
  "description": "The Figma plugin for Recursica",
  "type": "module",
  "packageManager": "pnpm@8.10.0",
  "license": "MIT",
  "author": {
    "name": "Border UX",
    "url": "https://borderux.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/recursica/recursica-plugin"
  },
  "keywords": [
    "figma",
    "plugin",
    "recursica",
    "design"
  ],
  "bugs": {
    "url": "https://github.com/recursica/recursica-plugin/issues"
  },
  "homepage": "https://github.com/recursica/recursica-plugin#readme",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:ui && pnpm build:code",
    "build:ui": "tsc -b && vite build",
    "build:code": "tsc -b && vite build --config vite.config.lib.ts",
    "bundle:recursica": "rollup -c recursica/rollup.config.js",
    "watch": "concurrently \"pnpm watch:ui\" \"pnpm watch:code\"",
    "watch:ui": "vite build --watch",
    "watch:code": "vite build --watch --config vite.config.lib.ts",
    "lint": "eslint ./src",
    "zip": "node scripts/zip.mjs",
    "preview": "vite preview",
    "prepare": "husky",
    "check-types": "tsc --noEmit",
    "format": "prettier --write .",
    "recursica": "tsx recursica/main.ts",
    "precommit": "pnpm check-types && pnpm lint && pnpm format",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=chpt_69ae5d081be6258"
  },
  "dependencies": {
    "@mantine/core": "~8.0.2",
    "@mantine/hooks": "~8.0.2",
    "@vanilla-extract/css": "^1.17.1",
    "axios": "^1.9.0",
    "chromatic": "^12.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.6.1",
    "vite-plugin-svgr": "^4.3.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4",
    "@eslint/js": "^9.11.1",
    "@figma/plugin-typings": "^1.100.2",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.2",
    "@storybook/addon-a11y": "9.0.5",
    "@storybook/addon-docs": "9.0.5",
    "@storybook/addon-onboarding": "9.0.5",
    "@storybook/addon-vitest": "9.0.5",
    "@storybook/react-vite": "9.0.5",
    "@types/archiver": "^6.0.3",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/vite-plugin": "^5.0.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "@vitest/browser": "^3.2.2",
    "@vitest/coverage-v8": "^3.2.2",
    "archiver": "^7.0.1",
    "concurrently": "^9.0.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-storybook": "9.0.5",
    "globals": "^15.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "playwright": "^1.52.0",
    "postcss": "^8.4.47",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.3.3",
    "rollup": "^4.42.0",
    "rollup-plugin-esbuild": "^6.2.1",
    "sass": "^1.79.4",
    "storybook": "9.0.5",
    "tslib": "^2.8.1",
    "tsx": "^4.19.4",
    "typescript": "5.5.4",
    "typescript-eslint": "^8.8.0",
    "vite": "^5.4.1",
    "vite-plugin-singlefile": "^2.0.2",
    "vitest": "^3.2.2"
  },
  "lint-staged": {
    "*.{json,js,jsx,ts,tsx,md,css,scss}": "pnpm precommit"
  }
}
